<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(MRTKRoot)\Assets\MixedRealityToolkit-SDK\**\*.cs" />

    <Content Include="$(MRTKRoot)\Assets\MixedRealityToolkit-SDK\Profiles\*">
      <PackagePath>%(RelativeDir)</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="$(UnityEngineDll)" />
    <Reference Include="$(UnityEngineUIExtensionDll)" />
    <ProjectReference Include="../MixedReality.Toolkit/MixedReality.Toolkit.csproj" />
  </ItemGroup>

</Project>
